# Custom aliases 
alias mkd="mkdir -vp"
alias cp="cp -i"

function setLsAliases(){
  alias l="lsd -l"
  alias la="lsd -la"
  alias ls="lsd"
  alias lsa="lsd -a"
}
function setParu(){
  alias p="paru"
}
function setNvim(){
  alias v="nvim"
  alias sv="sudo nvim"
}

(which lsd >/dev/null) && setLsAliases
(which paru >/dev/null) && setParu
(which nvim >/dev/null) && setNvim

